<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.csbgroup.myphr.ChangePINActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_1"
        android:id="@+id/security_1_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="9pt"
        android:textColor="#FFFF" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_1"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FFFF"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="9pt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_1_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:hint="@string/question_answer"
        android:textSize="9pt"
        android:textColorHint="#FFFF"
        android:textColor="#FFFF"
        android:backgroundTint="#FFFF"
        tools:ignore="TextFields"
        android:maxLength="25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_2"
        android:id="@+id/security_2_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:textSize="9pt"
        android:textColor="#FFFF" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_2"
        android:layout_marginTop="470dp"
        android:backgroundTint="#FFFF"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="9pt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_2_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:hint="@string/question_answer"
        android:textSize="9pt"
        android:textColorHint="#FFFF"
        android:textColor="#FFFF"
        android:backgroundTint="#FFFF"
        tools:ignore="TextFields"
        android:maxLength="25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textSize="10pt"
        android:textColor="#FFFF"
        android:id="@+id/saveQuestions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:onClick="questionsButton"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="OnClick" />


</RelativeLayout>