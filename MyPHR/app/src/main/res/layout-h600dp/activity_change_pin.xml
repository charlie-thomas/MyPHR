<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.csbgroup.myphr.ChangePINActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_pin"
        android:textColor="#FFFF"
        android:textSize="10pt"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        app:dotDiameter="15dp" />

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_change_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_dots_change"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:keypadButtonSize="72dp"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="#FFFF"
        app:keypadTextSize="22dp" />

</RelativeLayout>